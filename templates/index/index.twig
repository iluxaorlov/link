{% extends "base.twig" %}

{% block title %}Linky • Создавайте короткие ссылки{% endblock %}

{% block body %}
    <div class="container">
        <div id="logotype">
            <a id="logotype__link" href="{{ path_for('index') }}"><img id="logotype__image" src="./public/img/logotype.svg" alt=""></a>
        </div>
        <div id="form">
            <input id="form__address" name="address" type="text" placeholder="Что нужно сократить?" autocomplete="off">
            {% if links %}
                {% for link in links %}
                    <div class="past">
                        <a class="past__link" href="{{ link }}" target="_blank">{{ link }}</a>
                        <div class="past__copy">
                            <i class="fas fa-clone"></i>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}